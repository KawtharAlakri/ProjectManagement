@model ProjectManagement.Models.Log

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Log</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Log Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogType)
        </dd>
        @if (Model.LogType == "Exception")
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Message)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>   
        }
        else if (Model.LogType == "Action"){
            <dt class = "col-sm-2">
                Current Values
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CurrentValue)
            </dd>
            <dt class = "col-sm-2">
               Original Values
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.OriginalValue)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt class = "col-sm-2">
           Page/Form Source
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageSource)
        </dd>
        <dt class = "col-sm-2">
            Timestamp
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogTimestamp)
        </dd>
        <dt class = "col-sm-2">
           Username
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsernameNavigation.Username)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
