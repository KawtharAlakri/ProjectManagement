@model ProjectManagement.ViewModels.ProjectUsersVM

@{
    ViewData["Title"] = "Project Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["ActiveTab"] = "Details"; // Set the active tab based on the current page
}

@Html.Partial("_projectTabs", Model.project)

<style>
    .dl-horizontal dt {
        margin-bottom: 8px;
    }

    .dl-horizontal dd {
        margin-bottom: 16px;
    }
</style>
@if (TempData.ContainsKey("ErrorMessage") && !String.IsNullOrEmpty(TempData["ErrorMessage"].ToString()))
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["ErrorMessage"] </strong>
    </div>
}
@if (TempData.ContainsKey("SuccessMessage") && !String.IsNullOrEmpty(TempData["SuccessMessage"].ToString()))
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <dl class="row dl-horizontal">
                <dt class="col-sm-3">
                    <i class="bi bi-calendar"></i>   Created At
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.project.CreatedAt)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-calendar-event"></i>   Due Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.project.DueDate)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-currency-dollar"></i>   Budget
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.project.Budget)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-card-text"></i>   Description
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.project.Description)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-person"></i>   Project Manager
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.project.ProjectManagerNavigation.Username)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-info-circle"></i>   Status
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.project.StatusNavigation.StatusName)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-people"></i>   Project Members
                </dt>
                <dd class="col-sm-9">
                @foreach (UserProject member in Model.project.UserProjects)
                {
                        <div>@member.Username</div>
                }
                    </dd>

            </dl>
        </div>
    </div>
    
</div>
