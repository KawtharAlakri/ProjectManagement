@model ProjectManagement.Models.Project

@{
    string activeTab = ViewData["ActiveTab"]?.ToString();
}

<div class="mt-2">
    <a asp-action="Index" asp-controller="Projects" style="text-decoration: none;">
        <i class="bi bi-chevron-left"></i> Back to List
    </a>
</div>
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mt-2">@Model.ProjectName</h1>
    @if (Model.ProjectManager == User.Identity.Name)
    {
        <div>
            <a asp-action="Edit" asp-controller="Projects" asp-route-id="@Model?.ProjectId" class="btn btn-primary me-2">
                <i class="bi bi-pencil-fill"></i> Edit
            </a>
            <a asp-action="Delete" asp-controller="Projects" asp-route-id="@Model?.ProjectId" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Delete
            </a>
        </div>
    }
</div>

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link @(activeTab == "Dashboard" ? "active" : "")" href="@Url.Action("View", "Projects", new { id = Model.ProjectId })" aria-selected="@(activeTab == "Dashboard" ? "true" : "false")" role="tab" tabindex="@(activeTab == "Dashboard" ? "" : "-1")">Dashboard</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link @(activeTab == "Details" ? "active" : "")" href="@Url.Action("Details", "Projects", new { id = Model.ProjectId })" aria-selected="@(activeTab == "Details" ? "true" : "false")" role="tab" tabindex="@(activeTab == "Details" ? "" : "-1")">Details</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link @(activeTab == "Tasks" ? "active" : "")" href="@Url.Action("Index", "Tasks", new { id = Model.ProjectId })" aria-selected="@(activeTab == "Tasks" ? "true" : "false")" role="tab" tabindex="@(activeTab == "Tasks" ? "" : "-1")">Tasks</a>
    </li>
</ul>
