@model IEnumerable<ProjectManagement.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My dashboard</h1>


<div class="text-center">
    <div class="row">
        <div class="col-md-6">
            <div id="piechart_div" style="border: 1ps solid #ccc"></div>
        </div>
        <div class="col-md-6">
            <div id="barchart_div" style="border: 1ps solid #ccc"></div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
@section Scripts {




    <script>

        $(document).ready(function () {

            $.ajax({
                type: 'GET',


                dataType: "json",
                contentType: "application/json", url: '/Dashboard/getAllProjects', success: function (result) {

                    google.charts.load('current', {

                        'packages': ['corechart']
                    });

                    google.charts.setOnLoadCallback(function () {
                        drawChart(result);

                    });
                }

            });
            function drawChart(result) {


                var data = new google.visualization.DataTable(); data.addColumn('string', 'name'); data.addColumn('number', 'budget');
                var dataArray = [];

                $.each(result, function (i, obj) {
                    dataArray.push([obj.name, obj.budget]);

                });

                data.addRows(dataArray);


                var barchart_options = {
                    title: 'My projects budget', width: 500,
                    height: 300,
                    legend: 'none'

                };
                var barchart = new google.visualization.BarChart(document

                    .getElementById('barchart_div')); barchart.draw(data, barchart_options);

            }
        });

    </script>

 }
